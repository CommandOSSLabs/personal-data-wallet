{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "packages/pdw-sdk/examples/pdw-chat-demo/backend/Dockerfile",
    "watchPatterns": [
      "packages/pdw-sdk/examples/pdw-chat-demo/backend/**",
      "packages/pdw-sdk/src/**",
      "packages/pdw-sdk/dist/**"
    ]
  },
  "deploy": {
    "startCommand": "./docker-entrypoint.sh",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
